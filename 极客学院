          <span id="main234">会员故事</span>

        <div id="bottom">
            <div id="list2" style="left:-1004px;">
                <img src="./image/QQ截图20161127103158.jpg" style="width:1004px" />
                <img src="./image/QQ截图20161127102046.jpg" style="width:1004px" />
                <img src="./image/QQ截图20161127103158.jpg" style="width:1004px" />
                <img src="./image/QQ截图20161127102046.jpg" style="width:1004px" />
            </div>
            <div id="buttons2">
                <span index="1" class="on"></span>
                <span index="2"></span>
            </div>
            <script>
                window.onload = function ()
                {
                    var bottom = document.getElementById('bottom');
                    var list2 = document.getElementById('list2');
                    var buttons2 = document.getElementById('buttons2').getElementsByTagName('span');
                    var index = 1;
                    var len = 2;
                    var animated = false;
                   

                    function animate(offset) {
                        if (offset == 0) {
                            return;
                        }
                        animated = true;
                        var time = 300;
                        var inteval = 10;
                        var speed = offset / (time / inteval);
                        var left = parseInt(list2.style.left) + offset;

                        var go = function () {
                            if ((speed > 0 && parseInt(list2.style.left) < left) || (speed < 0 && parseInt(list2.style.left) > left)) {
                                list2.style.left = parseInt(list2.style.left) + speed + 'px';
                                setTimeout(go, inteval);
                            }
                            else {
                                list2.style.left = left + 'px';
                                if (left > -400) {
                                    list2.style.left = -1004 * len + 'px';
                                }
                                if (left < (-1004 * len)) {
                                    list2.style.left = '-1004px';
                                }
                                animated = false;
                            }
                        }
                        go();
                    }



                    function showButton() {
                        for (var i = 0; i < buttons2.length ; i++) {
                            if (buttons2[i].className == 'on') {
                                buttons2[i].className = '';
                                break;
                            }
                        }
                        buttons2[index - 1].className = 'on';
                    }
                    for (var i = 0; i < buttons2.length; i++) {
                        buttons2[i].onclick = function () {
                            if (animated) {
                                return;
                            }
                            if (this.className == 'on') {
                                return;
                            }
                            var myIndex = parseInt(this.getAttribute('index'));
                            var offset = -1004 * (myIndex - index);
                            animate(offset);
                            index = myIndex;
                            showButton();
                        }
                    }
                }
            </script>
        </div>
    
